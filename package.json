{
  "name": "hengshuai",
  "version": "1.0.0",
  "description": "A monorepo repository for UI, tools and plug-ins to assist in development",
  "main": "index.js",
  "keywords": [
    "monorepo",
    "vue-ui",
    "tool library",
    "typescript",
    "vue",
    "vuepress"
  ],
  "scripts": {
    "site:dev": "pnpm --filter docs dev",
    "site:build": "pnpm --filter docs build",
    "helper:dev": "pnpm --filter helper dev",
    "helper:build": "pnpm --filter helper build",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix \"./**/*.{css,scss}\"",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts}": [
      "npm run lint:script",
      "git add ."
    ],
    "**/*.{scss,css}": [
      "npm run lint:style",
      "git add ."
    ]
  },
  "author": {
    "name": "ihengshuai",
    "email": "wsm_1105@163.com",
    "url": "https://github.com/ihengshuai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ihengshuai/hengshuai.git"
  },
  "homepage": "https://github.com/ihengshuai/hengshuai",
  "bugs": {
    "url": "https://github.com/ihengshuai/hengshuai/issues"
  },
  "license": "ISC",
  "private": true,
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.7.4",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@amatlash/vite-plugin-stylelint": "^1.2.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "autoprefixer": "^10.4.7",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.9.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-prettier": "^2.0.0",
    "tslib": "^2.4.0",
    "vite": "^2.9.13",
    "vite-plugin-eslint": "^1.6.1",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.38.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignore": [
        "webpack"
      ]
    }
  },
  "engines": {
    "node": ">=14.19.2"
  }
}
